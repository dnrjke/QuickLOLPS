<UserControl x:Class="LolpsWidget.Views.ChampionBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource PrimaryDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 탭 헤더 -->
        <TabControl Grid.Row="0"
                    Background="Transparent"
                    BorderThickness="0">
            <TabItem Header="모든 챔피언"/>
            <TabItem Header="탑"/>
            <TabItem Header="정글"/>
            <TabItem Header="미드"/>
            <TabItem Header="원딜"/>
            <TabItem Header="서포터"/>
        </TabControl>

        <!-- 챔피언 그리드 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="ChampionGrid"
                          ItemsSource="{Binding Champions}"
                          Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- ChampionCard 컨트롤 (추후 구현) -->
                        <Border Background="{StaticResource SecondaryDarkBrush}"
                                BorderBrush="{StaticResource AccentOrangeBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="5"
                                Width="80"
                                Height="100"
                                Cursor="Hand">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 챔피언 이미지 영역 -->
                                <Rectangle Grid.Row="0"
                                          Fill="{StaticResource AccentOrangeBrush}"
                                          Margin="5"/>

                                <!-- 챔피언 이름 -->
                                <TextBlock Grid.Row="1"
                                          Text="{Binding Name}"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
